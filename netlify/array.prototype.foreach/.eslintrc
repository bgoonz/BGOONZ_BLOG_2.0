{
	"root": true,

	"extends": "@ljharb",

	"rules": {
		"array-bracket-newline": 0,
		"func-name-matching": 0,
		"id-length": 0,
		"max-statements-per-line": [2, { "max": 2 }],
		"new-cap": [2, {
			"capIsNewExceptions": [
				"GetIntrinsic",
				"Call",
				"Get",
				"HasProperty",
				"IsCallable",
				"LengthOfArrayLike",
				"RequireObjectCoercible",
				"ToBoolean",
				"ToObject",
				"ToString"
			]
		}],
		"no-magic-numbers": 0,
	},

	"overrides": [
		{
			"files": "test/**",
			"rules": {
				"id-length": 0,
				"max-lines-per-function": 0,
				"max-params": 0,
				"no-invalid-this": 1,
				"strict": 1,
			},
		},
		{
			"files": "**/*.mjs",
			"rules": {
				"no-restricted-exports": 1,
			},
		},
	],
}
